@{
    Layout = "_AdminShopLayout";
}

<h2>Goods</h2>

<!--КНОПКА СОЗДАНИЯ ПОЗИЦИИ-->
<a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="CreateGood" >Новая позиция</a>
<!--<a asp-controller="Manage" asp-action="CreateGood">Новая позиция</a>-->
<br />
<br />
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Категория</th>
                <th >Наличие(шт)</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr> 
        </thead>
        @foreach (var good in ViewBag.Goods)
        {
            <tr>
                <td><a asp-controller="Manage" asp-action="EditGood" asp-route-id="@good.Id">@good.Title</a></td>
                @if (@good.Category.ParentCategory != null)
                {
                    <td>@good.Category.ParentCategory.Title/@good.Category.Title</td>
                }
                else
                {
                    <td>@good.Category.Title</td>
                }
                <td>@good.Amount</td>
                <td>@good.Description</td>
                <td ><a class="btn btn-primary" role="button" asp-controller="Manage" asp-action="CreateGood">Удалить</a></td>
            </tr>
        }
    </table>
</div>
