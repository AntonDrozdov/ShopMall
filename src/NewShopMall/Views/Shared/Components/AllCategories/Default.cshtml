@model CreateGoodViewModel

<script type="text/javascript">
    jQuery(document).ready(function () {
        $(".nestedcat").click(function () {
            var parent = $(this).parent().parent().prev().html();
            var spanbeg = parent.indexOf('<');
            //вырезаем слово родительской категории и соединяем его с названием дочерней категории  
            $("#CurrentCatLabel").html(parent.substring(0, spanbeg) + "/ " + $(this).html());
            $("#CurrentCatInput").val(parent.substring(0, spanbeg) + "/ " + $(this).html());
            return;
        });
    });
    jQuery(document).ready(function () {
        $(".cat").click(function () {
            $("#CurrentCat").html($(this).html());
            return;
        });
    });
</script>


